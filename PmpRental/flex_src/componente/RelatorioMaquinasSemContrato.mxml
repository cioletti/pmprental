	</mx:ApplicationControlBar>
	
	<mx:VBox  width="100%" y="60" horizontalAlign="center" height="103">
		<mx:HBox id="datas" visible="true" width="100%" horizontalAlign="center">
			<mx:Button label="Gerar" click="gerarReport()"/>
		</mx:HBox>
